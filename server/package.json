{
  "name": "quantifiers-help-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "tsc": "tsc",
    "copy": "copyfiles -u 1 src/**/*.json build && copyfiles -u 1 src/**/*.html build",
    "build": "npm-run-all tsc copy",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon \"build/server.js\" --watch \"./build\"",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "copyfiles": "^1.2.0",
    "express": "^4.16.2",
    "nodemon": "^1.13.3",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.0.39",
    "@types/express-serve-static-core": "^4.0.57",
    "@types/filesystem": "0.0.28",
    "@types/node": "^8.5.1"
  }
}
